@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>
<h1>Ngồi đi!</h1>
<div id="google_translate_element"></div>
<button id="toggleLanguage" class="btn btn-primary mt-2">Chuyển Đổi Ngôn Ngữ</button>

<script type="text/javascript">
  var isVietnamese = true;
  
  function startGoogleTranslate() {
    var targetLanguage = isVietnamese ? 'vi' : 'en';

    new google.translate.TranslateElement(
      { pageLanguage: 'en', includedLanguages: 'en,vi', layout: google.translate.TranslateElement.InlineLayout.SIMPLE },
      'google_translate_element'
    );

    setTimeout(function() {
      var dropdown = document.querySelector('.goog-te-combo');
      dropdown.value = targetLanguage;
      dropdown.dispatchEvent(new Event('change'));
    }, 1000);
  }

  document.getElementById('toggleLanguage').addEventListener('click', function() {
    isVietnamese = !isVietnamese;
    var targetLanguage = isVietnamese ? 'vi' : 'en';

    var translateElement = new google.translate.TranslateElement(
      { pageLanguage: 'en', includedLanguages: 'en,vi', layout: google.translate.TranslateElement.InlineLayout.SIMPLE },
      'google_translate_element'
    );

    translateElement.addEventListener('renderEnd', function(event) {
      var dropdown = document.querySelector('.goog-te-combo');
      dropdown.value = targetLanguage;
      dropdown.dispatchEvent(new Event('change'));
    });
  });

  // Thông báo khi tài liệu đã được tải xong, sau đó khởi chạy Google Translate
  document.addEventListener('DOMContentLoaded', startGoogleTranslate);
</script>

<script
  type="text/javascript"
  src="//translate.google.com/translate_a/element.js?cb=startGoogleTranslate"
></script>

<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
  crossorigin="anonymous"
></script>
