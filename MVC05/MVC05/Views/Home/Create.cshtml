@model MVC05.Models.Hanghoa

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="mb-4">Thêm Sản Phẩm</h2>
            <form asp-action="Create" enctype="multipart/form-data" method="post">
                <div class="form-group">
                    <label for="Tenhang">Tên Hàng:</label>
                    <input type="text" class="form-control" id="Tenhang" name="Tenhang" required>
                </div>
                <div class="form-group">
                    <label for="Gianiemyet">Giá Niêm Yết:</label>
                    <input type="number" class="form-control" id="Gianiemyet" name="Gianiemyet" required>
                </div>
                <div class="form-group">
                    <label for="Dacdiem">Đặc Điểm:</label>
                    <textarea class="form-control" id="Dacdiem" name="Dacdiem" rows="3" required></textarea>
                </div>
                <div class="form-group">
                    <label for="Xuatxu">Xuất Xứ:</label>
                    <input type="text" class="form-control" id="Xuatxu" name="Xuatxu" required>
                </div>
                <div class="form-group">
                    <label for="Anhminhhoa">Ảnh Minh Họa:</label>
                    <input type="file" class="form-control-file" id="Anhminhhoa" name="ImageFile" required>
                </div>
                <button type="submit" class="btn btn-primary">Lưu</button>
            </form>
        </div>
    </div>
</div>
